<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewList"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="0dp">


        <LinearLayout
            android:id="@+id/itemService1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imageContainerLayout1"
                android:layout_width="80dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:id="@+id/iconIV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/aman_initiative" />
            </LinearLayout>

            <TextView
                android:id="@+id/titleTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="List"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewUtils"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="0dp">


        <LinearLayout
            android:id="@+id/itemService2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imageContainerLayout2"
                android:layout_width="80dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:id="@+id/iconIV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/aman_initiative" />
            </LinearLayout>

            <TextView
                android:id="@+id/titleTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Utils"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewStorages"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="0dp">


        <LinearLayout
            android:id="@+id/itemService3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imageContainerLayout3"
                android:layout_width="80dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:id="@+id/iconIV3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/aman_initiative" />
            </LinearLayout>

            <TextView
                android:id="@+id/titleTV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Storages"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewOthers"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="0dp">


        <LinearLayout
            android:id="@+id/itemService"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imageContainerLayout"
                android:layout_width="80dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:id="@+id/iconIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/aman_initiative" />
            </LinearLayout>

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Others"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>